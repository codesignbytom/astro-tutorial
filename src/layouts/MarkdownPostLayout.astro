---
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout visible={false}>
  <div class="flex flex-col gap-6">
    <div class="flex flex-col gap-4">
      <h1>{frontmatter.title}</h1>
      <div class="flex gap-4">
        <div class="flex items-center gap-2 font-medium">
          <i class="ph ph-calendar text-amber-500 text-xl"></i>
          <time datetime={frontmatter.pubDate}
            >{
              new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }</time
          >
        </div>
        <div class="flex items-center gap-2 font-medium">
          <i class="ph ph-user-circle text-amber-500 text-xl"></i>
          <a href="/about/">{frontmatter.author}</a>
        </div>
      </div>
    </div>

    <ul class="flex items-center gap-3 capitalize">
      {
        frontmatter.tags.map((tag) => (
          <li>
            <a
              class="border border-slate-950/20 p-2 rounded-sm hover:bg-slate-950 hover:text-white transition-colors"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          </li>
        ))
      }
    </ul>

    <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
    <slot />
  </div>
</BaseLayout>
