---
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout visible={false}>
  <div class="flex flex-col gap-6">
    <div class="flex flex-col gap-8">
      <h1>{frontmatter.title}</h1>
      <div class="flex gap-4">
        <div class="flex items-center gap-2 font-medium">
          <i class="ph ph-calendar text-amber-500 text-xl"></i>
          <time datetime={frontmatter.pubDate}
            >{
              new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }</time
          >
        </div>
        <div class="flex items-center gap-2 font-medium">
          <i class="ph ph-user-circle text-amber-500 text-xl"></i>
          <a href="/about/">{frontmatter.author}</a>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap items-center gap-3 capitalize">
      {
        frontmatter.tags.map((tag) => (
          <a
            class="border border-white-950/20 text-sm py-1 px-3 flex items-center justify-center hover:border-transparent hover:bg-amber-500 hover:text-slate-950 transition-colors"
            href={`/tags/${tag}`}
          >
            {tag}
          </a>
        ))
      }
    </div>

    <slot />
  </div>
</BaseLayout>
