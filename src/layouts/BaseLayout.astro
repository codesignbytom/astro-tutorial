---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../assets/index.css";

const { pageTitle } = Astro.props;

// Vendor imports
import "@phosphor-icons/web/light";
import "@phosphor-icons/web/regular";
import "@phosphor-icons/web/fill";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-white text-slate-950 dark:bg-slate-950 dark:text-white">
    <Header />
    <main class="container py-6 md:py-12 lg:py-16 xl:py-20">
      <div class="flex flex-col gap-6 md:gap-8 lg:gap-12 xl:gap-16">
        {pageTitle ? <h1>{pageTitle}</h1> : null}
        <slot />
      </div>
    </main>
    <Footer />
    <script>
      import "../assets/js/menu";
      import "../assets/js/themeToggle";
    </script>
  </body>
</html>
