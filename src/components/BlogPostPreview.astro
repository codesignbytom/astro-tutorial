---
const { title, url, image } = Astro.props;
---

<div class="flex flex-col gap-4">
  <a href={url} class="overflow-hidden">
    <img
      src={image.url}
      alt={image.alt}
      class="bg-black object-center w-full aspect-square object-cover hover:scale-110 transition-transform duration-500"
    />
  </a>

  <a class="hover:text-indigo-700" href={url}>
    <h3>{title}</h3>
  </a>
</div>
