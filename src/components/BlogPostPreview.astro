---
const { title, url, image, alt, excerpt, author, pubDate } = Astro.props;
---

<div class="flex flex-col gap-4">
  <a href={url}>
    <img class="border-0 aspect-square object-cover" src={image} alt={alt} />
  </a>
  <div class="flex flex-col gap-3">
    <a class="hover:text-amber-500" href={url}>
      <h3>{title}</h3>
    </a>
    <div class="flex gap-4">
      <div class="flex items-center gap-2 font-medium">
        <i class="ph ph-calendar text-amber-500 text-xl"></i>
        <time datetime={pubDate}
          >{
            new Date(pubDate).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }</time
        >
      </div>
      <div class="flex items-center gap-2 font-medium">
        <i class="ph ph-user-circle text-amber-500 text-xl"></i>
        <a href="/about/">{author}</a>
      </div>
    </div>
    <p class="opacity-50">{excerpt}</p>
  </div>
</div>
